<Window x:Class="PracticaCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button  Canvas.Top="0" Canvas.Left="0">Botón A</Button>
        <Button Canvas.Top="0" Canvas.Right="0">Botón B</Button>
        <Button  Canvas.Bottom="0" Canvas.Left="0">Botón C</Button>
        <Button Canvas.Bottom="0" Canvas.Right="0">Botón D</Button>
        <Rectangle Fill="Crimson" Height="50" Width="50" Canvas.Top="100" Canvas.Left="100" Panel.ZIndex="4"></Rectangle>
        <Rectangle Fill="Black"  Height="50" Width="50" Canvas.Top="130" Canvas.Left="130" Panel.ZIndex="3 "></Rectangle>
    </Canvas>
</Window>
